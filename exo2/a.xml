<mujoco model="robot_with_programmatic_floor"><compiler angle="degree" autolimits="true" />
  
  <option timestep="0.01" gravity="0 0 -9.0" solver="Newton" iterations="50" /><size njmax="1000" nconmax="500" /><default>
    <geom rgba="0.7 0.7 0.7 1" friction="1.2 0.01 0.002" condim="4" />
  </default>

  <asset><texture name="tex_grid" type="2d" builtin="checker" rgb1="0.7 0.8 1.0" rgb2="0.75 0.85 1.0" width="100" height="100" mark="edge" markrgb="1 1 1" /><texture name="tex_wheel_radius" type="2d" builtin="checker" rgb1="0.8 0.2 0.2" rgb2="0.1 0.1 0.1" width="32" height="32" mark="random" markrgb="0.8 0.8 0.2" /><material name="mat_floor_normal" rgba="0.7 0.8 1.0 0.8" texture="tex_grid" shininess="0.1" specular="0.3" texrepeat="50 50" /><material name="mat_floor_ice" rgba="0.6 0.7 1.0 0.7" texture="tex_grid" shininess="0.8" specular="0.9" texrepeat="50 50" /><material name="mat_floor_sand" rgba="0.9 0.8 0.6 0.8" texture="tex_grid" shininess="0.1" specular="0.1" texrepeat="50 50" /><material name="mat_chassis_beige" rgba="0.96 0.87 0.70 1" shininess="0.3" specular="0.5" /><material name="mat_wheel_black" rgba="0.1 0.1 0.1 1" texture="tex_wheel_radius" shininess="0.6" specular="0.3" /><material name="mat_chassis" rgba="0.3 0.3 0.35 1" />
    <material name="mat_wheel" rgba="0.1 0.1 0.1 1" />
    <material name="mat_floor" rgba="0.85 0.85 0.85 1" />
  </asset><worldbody><geom name="dynamic_floor" type="plane" size="100 100 0.1" pos="0 0 -0.1" material="mat_floor_normal" friction="1.0 0.005 0.0001" /><body name="robot" pos="0 0 -8.1">
      
      <joint name="root" type="free" damping="0.1" />

      
      
      <geom name="chassis" type="box" size="0.40 0.30 0.10" material="mat_chassis_beige" mass="15" />

      
      
      
      
      <body name="wheel_fl" pos=" 0.35  0.30 -0.10">  
        <joint name="hinge_fl" type="hinge" axis="0 1 0" damping="0.2" limited="false" />
        <geom name="geom_fl" type="cylinder" size="0.15 0.03" euler="90 0 0" material="mat_wheel_black" mass="1.0" />
      </body>

      <body name="wheel_fr" pos=" 0.35 -0.30 -0.10">  
        <joint name="hinge_fr" type="hinge" axis="0 1 0" damping="0.2" limited="false" />
        <geom name="geom_fr" type="cylinder" size="0.15 0.03" euler="90 0 0" material="mat_wheel_black" mass="1.0" />
      </body>

      <body name="wheel_rl" pos="-0.35  0.30 -0.10">  
        <joint name="hinge_rl" type="hinge" axis="0 1 0" damping="0.2" limited="false" />
        <geom name="geom_rl" type="cylinder" size="0.15 0.03" euler="90 0 0" material="mat_wheel_black" mass="1.0" />
      </body>

      <body name="wheel_rr" pos="-0.35 -0.30 -0.10">  
        <joint name="hinge_rr" type="hinge" axis="0 1 0" damping="0.2" limited="false" />
        <geom name="geom_rr" type="cylinder" size="0.15 0.03" euler="90 0 0" material="mat_wheel_black" mass="1.0" />
      </body>
    </body>
  </worldbody><actuator>
    
    <velocity name="motor_fl" joint="hinge_fl" kv="2" ctrllimited="true" ctrlrange="-10 10" />
    <velocity name="motor_fr" joint="hinge_fr" kv="2" ctrllimited="true" ctrlrange="-10 10" />
    <velocity name="motor_rl" joint="hinge_rl" kv="2" ctrllimited="true" ctrlrange="-10 10" />
    <velocity name="motor_rr" joint="hinge_rr" kv="2" ctrllimited="true" ctrlrange="-10 10" />
  </actuator>
</mujoco>